{
    "extends": ["plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "react/jsx-uses-vars": "error",
      "no-unused-vars": "error",
      "react/jsx-uses-react": "error",
      "react/react-in-jsx-scope": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    }
  }
  